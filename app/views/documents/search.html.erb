<p id="notice"><%= notice %></p>

<h1>Elastic search</h1>

<%= form_tag(documents_search_path, method: "get") do %>
  <%= label_tag(:query, "Elastic query:") %>
  <%= text_field_tag(:query, params[:query]) %>
  <%= submit_tag("Search") %>
<% end %>

<table>
  <thead>
  <tr>
    <th>Document</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @documents.each do |document| %>
    <tr>
      <td><%= document.document.original_filename %></td>
      <td><%= link_to 'Download', document.document.url %></td>
      <td><%= link_to 'Destroy', document, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Go to database', documents_path %>